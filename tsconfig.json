{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",  
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,                 
    "esModuleInterop": true,
    "experimentalDecorators": true,   
    "emitDecoratorMetadata": true,    
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}